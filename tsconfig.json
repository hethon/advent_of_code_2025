{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    
    "moduleResolution": "node10",
    "types": ["node"],

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    
    "noEmit": true
  },
  "include": ["src/**/*"]
}